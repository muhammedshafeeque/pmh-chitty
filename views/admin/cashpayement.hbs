<section>
  <div>
    <h3 class="mt-2" style="text-align: center;">List of All Gruped  Members </h3>
  </div>
  <div class="container mt-3">
    <table class="table">
      <thead>
        <tr>

          <th scope="col">Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Mobile Number</th>
          <th scope="col">Monthly Payment</th>
          <th scope="col">Grupe</th>
          <th scope="col">Balance To Pay</th>
          

        </tr>
      </thead>
      <tbody>
        {{#each members}}
        <tr>

          <td>{{this.fname}}</td>
          <td>{{this.Lname}}</td>
          <td>{{this.Mobile}}</td>
          <td>{{this.payment}}</td>
           <td>{{this.grup}}</td>
           <td style="color: red;">{{this.balance}}</td>
           <td></td>

          <td><a href="/admin/makepayment/{{this._id}}" class="btn btn-success">Make Payement</a></td>
        </tr>
        {{/each}}

      </tbody>
    </table>

  </div>
</section>