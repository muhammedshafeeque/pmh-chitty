<section>
    <div class="conainer mt-5">
        <div>
            <h3 style="text-align: center;">Grupe Creation</h3>
        </div>

        <div class="container mt-5">
                <div class="row">
                    <div class="col-sm ">
                        <div class="container">
                            <div>
                                    <h3 style="text-align: center;">Grups</h3>
                                </div>
                            <div class="d-flex justify-content-center mt-3">
                                
                                
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">Grupe Name</th>
                                            <th scope="col">Awailable Members</th>
                                            <th scope="col">Awailable Amount</th>
                                            <th scope="col">Maximum Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each grups}}
                                        <tr>
                                            
                                            <td>{{this.fname}}</td>
                                            <td>{{this.availmembers}}</td>
                                            <td>{{this.totalamount}}</td>
                                            <td>{{this.maxamount}}</td>
                                            <td><a href="/admin/remove-gupe/{{this._id}}" class="btn btn-danger">Remove</a></td>
                                           
                                            
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>


                            

                        </div>
                    </div>


                    <div class="col-sm">
                        <div class="container ">
                            <div class="col-9">
                                <div class="d-flex justify-content-center mt-5">

                                    <div style="width: 30rem; border:1px solid rgb(35, 1, 158); padding: 25px;">
                                        <div class="col 4">
                                            <form action="/admin/create-grupe" method="POST" id="add-member">

                                                <label for="">Grupe Name</label>
                                                <input type="text" class="form-control" name="fname" id="fname">
                                                {{#if maxamount}}
                                                <input type="number" class="form-control" name="maxamount" id="ggg" value="{{max}}" hidden>
                                                {{else}}
                                                <label for="">Maximum Amount</label>
                                                <input type="number" class="form-control" name="maxamount" id="ggg">
                                                {{/if}}

                                                <input type="number" class="form-control" name="totalamount" id="ggg" value="0" hidden>
                                                
                                                <div class="d-flex justify-content-center mt-5">
                                                    <button type="submit" class="btn btn-primary">Create New</button>
                                                </div>


                                            </form>
                                        </div>


                                    </div>
                                </div>


                            </div>
                            
                        </div>
                    </div>

                </div>

        </div>

</section>

