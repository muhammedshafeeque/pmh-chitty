
    <section>

        <div class="container mt-5">
            <h2 style="text-align: center;">{{member.fname}}  {{member.Lname}}</h2><br>
            
                <div class="row">
                    <div class="col-sm ">
                        <div style="margin: 10px;" class="container">

                            <div>
                                
                                
                                <br>
                                <p>Name:- {{member.fname}} {{member.Lname}}</p>
                                <p>Grupe:- {{member.grup}}</p>
                                <p>Mobile No:- {{member.Mobile}}</p>
                                <p>Monthly Payement:{{member.payment}}</p>
                                <p style="color: red;">Total Payement: {{member.payable}}</p>
                                <p style="color:green;">Total Payed:{{member.paid}}</p>
                                <p>Last payement date:</p>
                                {{#if gift}}
                                <h4 style="color: green;">GIFTED</h4>
                                <p style="color: green;">Gifted Amount:{{member.payable}}</p>
                                {{/if}}
                            </div>

                        </div>
                    </div>


                    <div class="col-sm">
                        <div class="container mt-5">
                            <div style="width:auto;height:auto; margin: 10px;">
                              
                                <div class="mt-5">
                                    <h5 style="text-align: center;">Payment History</h5>
                                </div>
                                <div class="mt-5">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">Date</th>
                                                <th scope="col">Methord</th>
                                                <th scope="col">Amount</th>
                                                
                                        </thead>
                                        <tbody>
                                             {{#each history}}
                                            <tr>
                                                <th scope="row">{{this.date}}</th>
                                                <td>{{this.methord}}</td>
                                                <td>{{this.amount}}</td>
                                            </tr>
                                           {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
        

        </div>

    </section>

